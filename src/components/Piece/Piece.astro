---
import { BASE } from "../../constants";

const { id, className = "", style = {}, piece } = Astro.props;
---

<article
  id={id}
  class={"piece ".concat(className).trimEnd()}
  style={{
    ...style,
    backgroundImage: `url("${`${BASE}/pieces/icon-${piece.name}.svg`}")`,
  }}
  transition:name={`piece-${piece.id}`}
>
</article>
