---
import Logo from "../Logo.astro";
import ScoreContainer from "../ScoreContainer.astro";
---

<header class="header">
  <article class="card">
    <div class="card-container">
      <a href="/">
        <Logo />
      </a>
      <ScoreContainer />
    </div>
  </article>
</header>

<style>
  .header {
    padding: 2rem 0;
    box-sizing: border-box;
  }
  .card {
    border-radius: 0.25rem;
    box-shadow: 0 0 0 0.25rem var(--header-outline);
    width: min(80%, 720px);
    margin: 0 auto;
    height: 5rem;
    &-container {
      height: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0rem 1.25rem;
      @media (width >= 1366px) {
        padding: 0rem 1.25rem;
      }
    }
    @media (width >= 1366px) {
      height: 8rem;
    }
  }
</style>
